{% extends 'base.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <h2 class="my-4">Bienvenue sur notre site des restaurants de Lyon</h2>
    <p>DÃ©couvrez les meilleurs restaurants de Lyon autour de vous.</p>
    <div id="map" style="height: 500px;"></div>
    <script>
        var map = L.map('map').setView([45.75, 4.85], 13); // Coordinates for Lyon

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Example markers
        var restaurants = [
            {coords: [45.75, 4.85], popup: 'Un excellent restaurant.'},
            {coords: [45.76, 4.84], popup: 'Un autre restaurant.'},
            {coords: [45.77, 4.83], popup: 'Encore un autre restaurant.'}
        ];

        restaurants.forEach(function(restaurant) {
            L.marker(restaurant.coords).addTo(map)
                .bindPopup(restaurant.popup);
        });
    </script>
{% endblock %}